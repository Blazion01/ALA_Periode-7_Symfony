{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; height: 2000px; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% if app.flashes %}
    {% for flash_success in app.flashes('success') %}
        <div class="alert alert-success">{{ flash_success }}</div>
    {% endfor %}
{% endif %}
<div id="homepage">
    <div class="counters">
        <div class="profiles">
            <p>Users:</p>
            <p class="count">{{ profiles }}</p>
        </div>
        <div class="matches">
            <p>Matches:</p>
            <p class="count">{{ matches }}</p>
        </div>
    </div>

    <div class="about">
        <p>
            We help you find other dog owners like you.
            {% if user == null %}
            <br><br>
            <a href="{{path('app_login')}}">Log in</a> or <a href="{{path('app_register')}}">Register now</a> to start searching!
            {% endif %}
            <br>
        </p>
    </div>
</div>
{% endblock %}
